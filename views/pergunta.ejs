<%- include ('./partials/header.ejs') %> <!--não esquecer do parenteses e aspas simples para abrir e fechar o partials-->
<body>
    <%- include ('./partials/navbar.ejs') %>
    <div  class= "container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %></p>
        <hr>
<!-- aqui estou dizendo, dentro da variável pergunta, o que quero imprimir. No caso titulo e na outra descricao -->
        
<!-- Aqui estou criando meu formulário de resposta -->
        <form class="formres"  method="POST"  action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <br>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea><br>
            <input type="hidden"  name="pergunta" value="<%= pergunta.id %>">
            <button  type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo%></p>
                </div> <!-- card-body -->
            </div> <!--card-->
        <% })%> 

    </div><!--container-->
</body>

